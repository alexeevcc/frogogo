<div class="flex flex-col md:flex-row gap-4 py-6 border-b border-gray-200 last:border-0">
  <div class="flex-shrink-0 w-full md:w-32 h-32 bg-gray-100 rounded-lg overflow-hidden">
    <% if cart_item.product.image.attached? %>
      <%= image_tag cart_item.product.image, class: "w-full h-full object-cover" %>
    <% else %>
      <div class="w-full h-full flex items-center justify-center bg-gray-200 text-gray-400">
        <%= inline_svg "logo.svg", class: "w-12 h-12" %>
      </div>
    <% end %>
  </div>
  <div class="flex-grow">
    <div class="mb-2">
      <h3 class="text-lg font-medium text-gray-900"><%= cart_item.product.name %></h3>
    </div>
    <div class="flex items-center justify-between mt-4">
      <div class="flex items-center border border-gray-300 rounded-md">
        <%= button_to "-", cart_items_path(cart_item),
                      method: :patch,
                      params: { cart_item: { quantity: cart_item.quantity - 1 } },
                      class: "px-3 py-1 text-gray-600 hover:bg-gray-100 transition",
                      disabled: cart_item.quantity <= 1 %>

        <span class="px-3 py-1 text-gray-900"><%= cart_item.quantity %></span>

        <%= button_to "+", cart_items_path(cart_item),
                      method: :patch,
                      params: { cart_item: { quantity: cart_item.quantity + 1 } },
                      class: "px-3 py-1 text-gray-600 hover:bg-gray-100 transition" %>
      </div>
    </div>
    <div class="text-right">
      <p class="text-lg font-semibold text-gray-900">
        <%= number_to_currency(cart_item.product.price, unit: "₽", format: "%n %u") %>
      </p>
      <% if cart_item.quantity > 1 %>
        <p class="text-sm text-gray-500">
          <%= number_to_currency(cart_item.product.price, unit: "₽", format: "%n %u") %> за шт.
        </p>
      <% end %>
    </div>
  </div>
  <div class="flex-shrink-0 self-start md:self-center">
    <%= button_to cart_items_path(cart_item),
                  method: :delete,
                  class: "text-gray-400 hover:text-red-500 transition",
                  data: { turbo_confirm: "Удалить товар из корзины?" } do %>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
      </svg>
    <% end %>
  </div>
</div>
